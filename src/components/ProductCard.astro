---
import { USDollar } from '../main';

interface Props {
    productImage: string;
    productName: string;
    productPrice: number;
    available: boolean;
    interactions?: number;
}

const { productName, productPrice, available, productImage, interactions } = Astro.props;
const classNameAvailable = available ? "rounded bg-green-200 px-2 py-1" : "rounded bg-red-200 px-2 py-1";

---

<article class="rounded px-3 py-4" data-interactions={interactions} data-name={productName} data-price={productPrice} data-available={available}>
    <header class="flex justify-center">
        <img src=`${productImage}` alt=`Product ${productName}` width="200px">
    </header>
    <section class="sm:flex justify-between items-center pt-4">
        <div class=`${classNameAvailable}`>
            {available ? <p>Disponible</p> : <p>Agotado</p>}
        </div>
        <p class="mt-3 sm:mt-0 text-xl tracking-tight">{USDollar.format(productPrice)} USD</p>
    </section>
    <h3 class="mt-3 sm:mt-0 text-md sm:py-4 font-semibold">{productName}</h3>
    <p class="hidden">{interactions}</p>
</article>